{% extends 'base.html.twig' %}

{% block title %}Utilisateurs index{% endblock %}

{% block body %}

    <h2 class="m-3">Utilisateurs</h2>

    <div class="card">
        <div class="card-header">
            <h4> Listes des utilisateurs</h4>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-responsive-sm  ">
                <thead>
                <tr class="table-light">
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Matricule</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for utilisateur in utilisateurs %}
                    <tr>
                        <td>{{ utilisateur.nom }}</td>
                        <td>{{ utilisateur.prenom }}</td>
                        <td>{{ utilisateur.matricule }}</td>
                        <td class="d-flex justify-content-center">

                           <button class="btn">
                               <a title="Éditer" href="{{ path('app_utilisateurs_edit', {'id': utilisateur.id}) }}">
                                   <i class="fa-solid fa-pen-to-square text-warning"></i>
                               </a>
                           </button>
                            {{ include('utilisateurs/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">Aucun résultat trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>

        <div class="card-footer d-flex justify-content-center">
            <a href="{{ path('app_utilisateurs_new') }}">
                <button type="button" class="btn btn-success">Créer un utilisateur</button>
            </a>
        </div>
    </div>
{% endblock %}

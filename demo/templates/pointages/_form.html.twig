{{ form_start(form) }}
<div class="form-group">
    {{ form_label(form.utilisateur) }}
    {{ form_widget(form.utilisateur, { 'attr': {'class': 'form-control'} }) }}
</div>
<div class="form-group">
    {{ form_label(form.chantier) }}
    {{ form_widget(form.chantier, { 'attr': {'class': 'form-control'} }) }}
</div>
<div class="form-group">
    {{ form_label(form.date) }}
    {{ form_widget(form.date) }}
</div>
<div class="form-group">
    {{ form_label(form.duree) }} <span>en heures </span>
    {{ form_widget(form.duree, { 'attr': {'class': 'form-control'} }) }}
</div>
<div class=" mt-2 text-center">
    <button class="btn btn-success">{{ button_label|default('Enregistrer') }}</button>
</div>
{{ form_end(form) }}